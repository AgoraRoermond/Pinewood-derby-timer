<html>

<head>
  <link rel="stylesheet" href="/css/index.css">
</head>

<body onLoad="myFunction()">
  <header>
    <div class="headertext">
      <h1> Derby timing Niekee login</h1>
    </div>
  </header>
  <br>
  <br>
  <main>
    <div class="form">
      <!-- Login form-->
      <form method="post">
        <!--gebruikersnaam-->
        <label class="email" for="loginEmail">Email</label>
        <br /><br />
        <input type="text" size="40" id="loginEmail" name="loginEmail" required value="<%= typeof email != 'undefined' && email || null %>">
        <br /><br />
        <!--wachtwoord-->
        <label class="wachtwoord" for="loginPassword">Password</label>
        <br /><br />
        <input type="password" size="40" id="loginPassword" name="loginPassword" required <%= typeof email != 'undefined' && "autofocus" || null %>>
        <br /><br />
        <!--login knop-->
        <input class="loginknop" type="submit" value="Log in">
      </form>
      <!--de pop up-->
      <div class="popup">
        <span class="popuptext" id="myPopup" onclick="myFunction()"><%= typeof error != 'undefined' && error || null %></span>
      </div>
    </div>
  </main>
  <div class="tabel">
    <table>
      <tr>
        <th>Id</th>
        <th>Student mail</th>
        <th>Time</th>
        <th>Timestamp</th>
      </tr>

      <% for(let i = 0; i < times.length; i++) { %>
      <tr>
        <td><%= times[i].id %></td>
        <td><%= times[i].student_mail %></td>
        <td><%= times[i].time %></td>
        <td><%= times[i].timestamp %></td>
      </tr>
      <% } %>
    </table>
  </div>

  <!--script voor de popup veranderen-->
  <script>
    function myFunction() {
      <% if (typeof error != 'undefined') { %>
      var popup = document.getElementById("myPopup");
      popup.classList.toggle("show");
      <% } %>
    }
  </script>
</body>

</html>
