<!-- views/pages/students/allStudents.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../../partials/students/head') %>
</head>
<body>

    <header>
        <h1>
            All students
        </h1>
        <%- include ('../../partials/students/nav') %>
    </header>

<main>
    <table>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Class</th>
      </tr>

      <% for(let i = 0; i < students.length; i++) { %>
      <tr>
        <td><%= students[i].id %></td>
        <td><%= students[i].name %></td>
        <td><%= students[i].class %></td>
      </tr>
      <% } %>
    </table>
</main>

<footer>
    <%- include ('../../partials/students/footer') %>
</footer>

</body>
</html>
